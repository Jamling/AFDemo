    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.ieclipse.af.view.AutoPlayView
        android:id="@+id/auto_play"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <cn.ieclipse.af.demo.common.view.IntroViewPager
            android:layout_width="match_parent"
