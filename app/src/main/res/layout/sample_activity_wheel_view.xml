<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <cn.ieclipse.af.view.FlowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2">

        <CheckBox
            android:id="@+id/chk1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Year"/>

        <EditText
            android:id="@+id/et1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="year label"
            android:imeOptions="actionNone"
            android:maxLength="2"/>

        <CheckBox
            android:id="@+id/chk2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Month"/>

        <EditText
            android:id="@+id/et2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="month label"
            android:imeOptions="actionNone"
            android:maxLength="2"/>

        <CheckBox
            android:id="@+id/chk3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Day"/>

        <EditText
            android:id="@+id/et3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="day label"
            android:imeOptions="actionNone"
            android:maxLength="2"/>

        <CheckBox
            android:id="@+id/chk4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hour"/>

        <EditText
            android:id="@+id/et4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="hour label"
            android:imeOptions="actionNone"
            android:maxLength="2"/>
        <CheckBox
            android:id="@+id/chk5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Minute"/>

        <EditText
            android:id="@+id/et5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="minute label"
            android:imeOptions="actionNone"
            android:maxLength="2"/>
    </cn.ieclipse.af.view.FlowLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider"/>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="30dp"
        android:textSize="18sp"
        android:textStyle="italic"
        />

    <include
        android:id="@+id/wv_container"
        layout="@layout/common_wheel_time_container"/>
</LinearLayout>