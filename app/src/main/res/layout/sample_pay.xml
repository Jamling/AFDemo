<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="客户端下单"/>

        <cn.ieclipse.af.view.FlowLayout
            android:id="@+id/fl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:fl_vDivider="?android:attr/listDivider"
            app:fl_vDividerShow="middle">

            <cn.ieclipse.af.view.checkable.CheckableRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/af_alipay_logo"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="支付宝"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="false"
                    android:duplicateParentState="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:visibility="gone"/>
            </cn.ieclipse.af.view.checkable.CheckableRelativeLayout>

            <cn.ieclipse.af.view.checkable.CheckableRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/af_wxpay_logo"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="微信支付"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="false"
                    android:duplicateParentState="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:visibility="gone"/>
            </cn.ieclipse.af.view.checkable.CheckableRelativeLayout>
        </cn.ieclipse.af.view.FlowLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="服务端下单（推荐）"/>

        <EditText
            android:id="@+id/et1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/bg_main"
            android:lines="3"
            />

        <cn.ieclipse.af.view.FlowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:numColumns="2"
            app:fl_hDivider="?android:attr/listDivider"
            app:fl_hDividerShow="middle">

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/af_alipay_logo"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:text="支付宝"/>

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/af_wxpay_logo"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:text="微信支付"/>
        </cn.ieclipse.af.view.FlowLayout>
    </LinearLayout>
</ScrollView>