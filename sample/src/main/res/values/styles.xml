<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <!--<item name="android:textSize">@dimen/text_size_normal</item>-->
        <!--<item name="android:textColorPrimary">@color/black_666666</item>-->
        <!--<item name="textAppearanceListItemSmall">@dimen/text_size_title</item>-->
    </style>

    <!-- radio button tab item -->
    <style name="rb_tab">
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- radio button tab item of Home -->
    <style name="rb_tab_main" parent="rb_tab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/fg_main_bottom_selector</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">12sp</item>
        <!-- to show badge count -->
        <item name="android:maxLines">1</item>
    </style>

    <style name="preference">
        <item name="android:background">?android:attr/listChoiceBackgroundIndicator</item>
    </style>

    <style name="preference_title">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:hint">Title</item>
        <item name="android:textColor">@color/black_333333</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="preference_summary">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:hint"></item>
        <item name="android:textColor">@color/colorPrimary</item>
        <!--@android:color/secondary_text_dark-->
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <style name="preference_check">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:hint"></item>
        <item name="android:textColor">@android:color/secondary_text_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="h5_progress" parent="android:Widget.Holo.ProgressBar.Horizontal">

    </style>

    <!-- main sliding tab -->
    <style name="tab_sliding" parent="text_title">
        <!--<item name="pstsOneScreenTabs">4</item>-->
        <item name="pstsSelectedTextColor">@color/colorPrimary</item>
        <item name="pstsIndicatorColor">@color/colorPrimary</item>
        <item name="pstsIndicatorHeight">2dp</item>
        <item name="pstsTextAllCaps">false</item>
    </style>

    <!-- for normal text+1 32px -->
    <style name="text_title">
        <item name="android:textColor">@color/black_333333</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="text_normal">
        <item name="android:textColor">@color/black_666666</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="et_login" parent="text_title">
        <item name="android:minHeight">50dp</item>
        <item name="android:textColorHint">@color/black_999999</item>
        <item name="android:textColor">@color/black_333333</item>
        <item name="android:padding">6dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="PopupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
    </style>

    <!-- Base RefreshRecyclerView -->
    <style name="refresh_rv">
        <item name="recyclerView">@layout/base_rv</item>
        <item name="dividerHeight">1px</item>
        <item name="dividerColor">@color/divider</item>
    </style>
</resources>
