<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flexDirection="row"
        app:flexWrap="wrap">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="flexDirection:"/>

        <Spinner
            android:id="@+id/spn1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:entries="@array/sample_direction"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flex wrap:"/>

        <Spinner
            android:id="@+id/spn2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:entries="@array/sample_wrap"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="justifyContent:"/>

        <Spinner
            android:id="@+id/spn3"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:entries="@array/sample_justifyContent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="alignItems:"/>

        <Spinner
            android:id="@+id/spn4"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:entries="@array/sample_alignItems"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="alignContent:"/>

        <Spinner
            android:id="@+id/spn5"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:entries="@array/sample_alignContent"/>
    </com.google.android.flexbox.FlexboxLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:alignContent="stretch"
        app:alignItems="stretch"
        app:flexDirection="row"
        app:flexWrap="wrap">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@android:color/holo_red_dark"
            app:layout_flexBasisPercent="20%"
            android:padding="10dp"
            android:background="@color/black_alpha_20"
            android:layout_margin="5dp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:padding="10dp"
            android:background="@color/black_alpha_20"
            android:layout_margin="5dp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="3"
            android:padding="10dp"
            android:background="@color/black_alpha_20"
            android:layout_margin="5dp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:padding="10dp"
            android:background="@color/black_alpha_20"
            android:layout_margin="5dp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:padding="10dp"
            android:textColor="@android:color/darker_gray"
            android:background="@color/black_alpha_20"
            android:layout_margin="5dp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="6"
            android:padding="10dp"
            android:textColor="@android:color/holo_blue_bright"
            android:background="@color/black_alpha_20"
            android:layout_margin="5dp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="7"
            android:padding="10dp"
            android:textColor="@android:color/holo_green_dark"
            android:background="@color/black_alpha_20"
            android:layout_margin="5dp"/>
    </com.google.android.flexbox.FlexboxLayout>
</LinearLayout>