<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/clear_bnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="clear"
            android:onClick="clear"/>

        <Button
            android:id="@+id/add_head_bnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add head"
            android:onClick="addHead"/>
        <Button
            android:id="@+id/remove_head_bnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="remove head"
            android:onClick="removeHead"/>

        <Button
            android:id="@+id/refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="refresh"
            android:onClick="refresh"/>

    </LinearLayout>


    <cn.ieclipse.af.demo.sample.recycler.view.MyRefreshRecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:recyclerView="@layout/sample_recyclerview"/>

</LinearLayout>